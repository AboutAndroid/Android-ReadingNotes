<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 去标题栏 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlNormal">@color/colorRed</item>

    </style>

    <style name="Theme.ToolBar.Popup" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 文字大小 -->
        <item name="android:textSize">15sp</item>

        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/colorRed</item>

    </style>


    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 溢出按钮颜色-->
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>




</resources>
